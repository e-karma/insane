<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Hotness</th>
      <th>Completed</th>
      <th>Due Date</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |task|}}
    <tr>
      <td>{{title}}</td>
      <td>{{hotness}}</td>
      <td>{{isCompleted}}</td>
      <td>{{dueDate}}</td>
      <td>{{notes}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{#link-to 's.vendors.vendor.tasks.create'}}
<div class="btn btn-info bump">Create New Task</div>
{{/link-to}}



{{outlet}}
