<hr>
<form>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
            <label for="identification">Title</label>
            {{input type="text" value=model.title class='form-control'}}
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
            <label for="rating">Completed?</label>
            {{input type="number" value=model.isCompleted class='form-control'}}
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
            <label for="description">Hotness</label>
            {{input type="number" value=model.hotness class='form-control'}}
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
            <label for="category">Due Date</label>
            {{input type="date" value=model.dueDate class='form-control'}}
        </div>
      </div>
    </div>
    <div class="form-group">
        <label for="description">Notes</label>
        {{textarea type="text" value=model.notes class='form-control'}}
    </div>

    <button class="btn btn-default" {{action 'createTask' model}}>Create Task</button>
</form>
