{{outlet}}

<div class="container top75">
	<div class="row">
		<div class="col-md-2">
			{{#link-to 's.vendors.create'}}<div class="btn btn-info bump">Create Vendor</div>{{/link-to}}
		</div>
		<div class="col-md-10">


			<div class="panel panel-default">
			  <!-- Default panel contents -->
			  <div class="panel-heading"><h2>Vendors</h2></div>


			  <!-- Table -->
			  <table class="table">
					<thead>
						<tr>
							<td>Vendor Name</td>
							<td>Owner</td>
							<td>Address</td>
							<td>description</td>
						</tr>
					</thead>
					<tbody>
						{{#each model as |vendor|}}
						<tr>
							<td><h5>{{vendor.name}}</h5></td>
							<td><h5>{{vendor.user.firstName}}&nbsp;{{vendor.user.lastName}}</h5></td>
							<td><h5>{{vendor.description}}</h5></td>
							<td><h5>{{vendor.address}}</h5></td>
						</tr>
						{{/each}}
				</tbody>
			  </table>
			</div>

		</div>
	</div>
</div>
