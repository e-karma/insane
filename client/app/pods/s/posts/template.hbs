<div class="container top75">
	<div class="col-md-2">
    <div class="list-group">
      {{#link-to 's.posts.create'}}<div class="btn-lg btn-info bump">Create Post</div>{{/link-to}}
      <hr>
			{{#link-to 's.posts.index' class="list-group-item"}}<h5>Released Posts</h5>{{/link-to}}
      {{#each model as |post|}}
        {{#link-to 's.posts.post' post.id class='list-group-item'}}{{post.title}}{{/link-to}}
      {{/each}}
    </div>
	</div>
	<div class="col-md-10">
		<div class="row ">
        {{outlet}}
		</div>
	</div>
</div>
