{{outlet}}
<div class="container">
	{{#link-to 's.posts.create'}}<div class="btn btn-info bump">Create Post</div>{{/link-to}}
	<div class="page-header">
        <h2>Posts</h2>
    </div>
	{{#each model as |post|}}
		<h4>{{#link-to 's.posts.post' post.id}}{{post.title}}{{/link-to}}</h4>
		<p>{{post.body}}</p>		
	{{/each}}
</div>
