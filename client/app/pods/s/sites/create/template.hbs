<div class="container">
	<div class="page-header">
        <h2>Create Site</h2>
    </div>
	<form {{action 'createSite' on='submit'}}>
	    <div class="form-group">
	        <label for="identification">Domain Name</label>
	        {{input type="text" value=model.domain class='form-control'}}
	    </div>
	    <div class="form-group">
	        <label for="body">Theme</label>
	        {{input type="text" value=model.theme class='form-control'}}
	    </div>
	    <button class="btn btn-default" {{action 'createSite' model}}>Create Site</button>
	</form>
</div>
